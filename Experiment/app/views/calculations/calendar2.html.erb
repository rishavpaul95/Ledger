
<div id="dvCalendar" style="display: block"> 
    <div class="container">
        <div class="calendar">
            <div class="month">
            <i class="fas fa-angle-left prev"></i>
            <div class="date">
                <h1></h1>
                <p></p>
            </div>
            <i class="fas fa-angle-right next"></i>
            </div>
            <div class="weekdays">
            <div>Sun</div>
            <div>Mon</div>
            <div>Tue</div>
            <div>Wed</div>
            <div>Thu</div>
            <div>Fri</div>
            <div>Sat</div>
            </div>
            <div class="days"></div>
        </div>
    </div>
</div>
    <hr>

    <label for="chkCalendar">
    <input type="checkbox" id="chkCalendar" onclick="ShowHideDiv(this)" />
     <h3> Or Date Range <h3>
    </label>
    <hr />
    
    <div id="dvRange" style="display: none"> 
      <table>
      <tbody>
          <tr>
          <td>Period</td>
          </tr>
          <tr>
          <td>
            <div class="row">
                <div class= "pull-right range-query">
                    <%=form_tag calculations_path, method: :get do %>
                    <%= text_field_tag 'search[date_from]' , @search.date_from , style: "border : 1px solid black;" , class: "datepicker" %>
                    to
                    <%= text_field_tag 'search[date_to]', @search.date_to , style: "border: 1px solid black;" , class: "datepicker" %>
                    <hr>
                    <%= submit_tag 'Search', style: "text-size: 40px;" %>
                    <% end %>
                </div>
             </div>
          </td>
          </tr>
      </tbody>
      </table>
    </div>


