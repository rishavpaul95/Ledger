<div class="container">
    <div id="calculator-box" class="row w-75-sm text-center m-auto mt-5 shadow">
        <div class="col m-2 mt-5">
            <div id="screen" class="row m-2 mt-2">
                <input type="text" class="form-control form-control-lg p-3" placeholder="Let's crunch some numbers!">
            </div>
            <div id="controls-panel" class="row flex-nowrap overflow-auto">
                <div id="num-pad" class="col-9 m-2 pt-3 border-end">
                    <div class="cotainer-fluid text-center p-3">
                        <button id="but-1" class="d-inline-block w-25 border shadow m-3 p-4">1</button>
                        <button id="but-2" class="d-inline-block w-25 border shadow m-3 p-4">2</button>
                        <button id="but-3" class="d-inline-block w-25 border shadow m-3 p-4">3</button>
                        <button id="but-4" class="d-inline-block w-25 border shadow m-3 p-4">4</button>
                        <button id="but-5" class="d-inline-block w-25 border shadow m-3 p-4">5</button>
                        <button id="but-6" class="d-inline-block w-25 border shadow m-3 p-4">6</button>
                        <button id="but-7" class="d-inline-block w-25 border shadow m-3 p-4">7</button>
                        <button id="but-8" class="d-inline-block w-25 border shadow m-3 p-4">8</button>
                        <button id="but-9" class="d-inline-block w-25 border shadow m-3 p-4">9</button>
                        <button id="but-0" class="d-inline-block w-25 border shadow m-2 p-4">0</button>
                    </div>
                </div>
                <div id="ops-pad" class="col m-2">
                    <div class="container text-center m-1-2 d-flex flex-column align-content-stretch">
                        <button id="but-Clear" class="d-inline-block w-100 border shadow m-2 p-3">Clear</button>
                        <button id="but-+" class="d-inline-block w-100 border shadow m-2 p-3">+</button>
                        <button id="but--" class="d-inline-block w-100 border shadow m-2 p-3">-</button>
                        <button id="but-X" class="d-inline-block w-100 border shadow m-2 p-3">X</button>
                        <button id="but-/" class="d-inline-block w-100 border shadow m-2 p-3">/</button>
                        <button id="but-=" class="d-inline-block w-100 border shadow m-2 p-3">=</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>